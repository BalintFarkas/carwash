<views:BasePage
    x:Class="MSHU.CarWash.UWP.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MSHU.CarWash.UWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:MSHU.CarWash.UWP.Views"
    mc:Ignorable="d">

    <Grid Background="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <local:SignOutControl Grid.Row="0"/>
        <RelativePanel Grid.Column="0" Grid.Row="1" Background="Transparent">
            <TextBlock Text="Registration:" x:Name="RegistrationBlock" Margin="12"
                   RelativePanel.AlignLeftWithPanel="True" />
            <TextBlock Text="{Binding RegistrationInfo}" RelativePanel.RightOf="RegistrationBlock"
                   RelativePanel.AlignVerticalCenterWith="RegistrationBlock"/>
        </RelativePanel>

    </Grid>


</views:BasePage>
